---
import AppLayout from '@/layouts/AppLayout.astro';
import { redirectIfAuthenticated } from '@/lib/auth/server-auth-utils';
import { SecureSigninForm } from '@/components/auth/SecureSigninForm';

// Redirect to dashboard if already authenticated
await redirectIfAuthenticated(Astro);
---

<AppLayout title="Sign In - Couples Management" navVariant="auth">
  <div class="flex items-center justify-center min-h-screen py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-foreground">
          Welcome back
        </h2>
        <p class="mt-2 text-sm text-muted-foreground">
          Sign in to your account to continue
        </p>
      </div>
      
      <SecureSigninForm client:load />
    </div>
  </div>
</AppLayout> 