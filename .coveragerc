[run]
# Source directories to monitor
source = app

# Enable branch coverage
branch = True

# Files to omit from coverage
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */migrations/*
    */alembic/*
    */venv/*
    */.venv/*
    */env/*
    */site-packages/*
    */conftest.py
    */setup.py
    app/main.py
    app/config.py

# Parallel processing
parallel = True

[report]
# Minimum coverage threshold
fail_under = 80

# Show missing lines in report
show_missing = True

# Skip covered files in report
skip_covered = False

# Skip empty files
skip_empty = True

# Precision for coverage percentage
precision = 2

# Exclude lines from coverage
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug
    
    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:
    
    # Don't complain about abstract methods
    @(abc\.)?abstractmethod
    
    # Don't complain about type checking imports
    if TYPE_CHECKING:
    
    # Don't complain about platform specific code
    if sys.platform

[html]
# Directory for HTML coverage reports
directory = htmlcov

# Title for HTML reports
title = Couples Management App Coverage Report

# Show contexts in HTML report
show_contexts = True

[xml]
# Output file for XML coverage reports
output = coverage.xml

[json]
# Output file for JSON coverage reports
output = coverage.json
# Pretty print JSON
pretty_print = True

[paths]
# Map paths for coverage combination
source =
    app/
    */site-packages/app/ 